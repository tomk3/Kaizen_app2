  <link rel="stylesheet" href="assets/stylesheets.login.css">

</head>

<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">新規製品登録</div>
                    <div class="card-body">

                        <%= form_tag("/product/create") do %>
                            <div class="form-group row">
                                <label for="prod_name" class="col-md-4 col-form-label text-md-right">製品名</label>
                                <div class="col-md-6">
                                    <input type="text" id="prod_name" class="form-control" name="prod_name" required autofocus>
                                </div>
                            </div>
                            <div class="form-group row">
                              <div class="col-md-3 offset-md-9">
                                <input type="submit" value="新規登録" class="btn btn-primary">
                              </div>
                            </div>
                        <% end %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
